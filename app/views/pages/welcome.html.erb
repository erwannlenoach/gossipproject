
<div class="container">

  <h1>Bienvenue <%= User.find_by(id: session[:user_id]).first_name %> !</h1>

  <h2> Ici ça gossip à fond 😁</h2> 
  
  <div class="row">
    <% @gossips.each do |gossip| %>  
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= gossip.title %></h5>
            <p class="card-text"><%= gossip.content %></p>
            <p class="card-text">created by : <%= gossip.user.first_name %><%= gossip.user.last_name %></p>
            <button type="button" class="btn btn-warning"><%= link_to "show", gossip%></button>       
            </div>
        </div>
      </div>
      <% end %>
  </div>

  <button type="button" class="btn btn-warning"><%= link_to "new", new_gossip_path %></button>   

</div>

